<%= form_with model: @category do |f| %>
  <div class="row mb-2">
    <div class="col-10 form-group">
      <%= f.label :title, "Название компетенции" %>
      <%= f.text_field :title, class: 'form-control', value: @category.title %>
    </div>
    <%= f.submit 'Сохранить изменения', class: 'btn btn-success' %>
  </div>
<% end %>