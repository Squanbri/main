<div class="container">
  <%= form_with model: @category do |f| %>
    <div class="row mb-2">
      <div class="col-9 form-group">
         <%= f.text_field :title, class: 'form-control' %>
      </div>
      <%= f.submit 'Сохранить изменения', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>